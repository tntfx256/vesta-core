{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["esnext", "dom"],
        "outDir": "./build",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "build"
    ]
}